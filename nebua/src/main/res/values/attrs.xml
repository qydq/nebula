<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="anBackground" format="color" />
    <attr name="anTextColor" format="color" />
    <attr name="anTextColorClick" format="color" />
    <attr name="anBarBackground" format="color" />

    <declare-styleable name="recycler_swipe_SwipeMenuLayout">
        <attr name="leftViewId" format="reference" />
        <attr name="rightViewId" format="reference" />
        <attr name="contentViewId" format="reference" />
    </declare-styleable>

    <!--inabarlayout_晴雨(2018年02月初封装）-->
    <declare-styleable name="INABarLayout">
        <attr name="anTxRight" format="string" />
        <attr name="anTxRRight" format="string" />
        <attr name="anTxTitle" format="string" />
        <attr name="anTxBack" format="string" />
        <attr name="anIvBack" format="reference" />
        <attr name="anIvRight" format="reference" />
        <attr name="anIvRRight" format="reference" />
        <attr name="anBarLayoutbg" format="reference|color" />
        <attr name="shouldDayNight" format="reference|boolean" />
        <attr name="shouldComplex" format="reference|boolean" />
        <attr name="shouldLayout" format="reference|boolean" />
        <attr name="showRRLl" format="reference|boolean" />
        <attr name="showRLl" format="reference|boolean" />
        <attr name="showBackLl" format="reference|boolean" />
        <attr name="anIvBackWidth" format="dimension" />
        <attr name="anIvRightWidth" format="dimension" />
        <attr name="anIvRRightWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>
    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>
    <declare-styleable name="AnPickerView">
        <attr name="isLoop" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PickerView_Library">
        <attr name="pickerview_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="pickerview_textSize" format="dimension" />
        <attr name="pickerview_textColorOut" format="color" />
        <attr name="pickerview_textColorCenter" format="color" />
        <attr name="pickerview_dividerColor" format="color" />
    </declare-styleable>
    <declare-styleable name="INAPowerImageView">
        <attr name="auto_play" format="boolean" />
    </declare-styleable>
    <declare-styleable name="INASlidingLayout">
        <attr name="background_view" format="reference" />
        <attr name="sliding_mode" format="enum">
            <enum name="both" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="sliding_pointer_mode" format="enum">
            <enum name="one" value="0" />
            <enum name="more" value="1" />
        </attr>
        <attr name="top_max" format="dimension" />
    </declare-styleable>

    <!--come from https://bintray.com/dalong982242260/maven/marqueeview thx you -->
    <declare-styleable name="INAMarqueeView">
        <attr name="textcolor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="isRepeat" format="boolean" />
        <attr name="marqueebackground" format="color" /><!--新增-->
        <attr name="speed" format="integer" />
        <attr name="startPoint" format="integer">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>
        <attr name="direction" format="integer">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>